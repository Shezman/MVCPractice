@model FirstChallenge.Models.ComicBook
@{
    ViewBag.Title = "Detail";
}



<h2>Details About @Model.ComicTitle #@Model.EpisodeNumber</h2>
<h3>Episode Title: @Model.EpisodeTitle</h3>

@{
    var characters = Model.Characters.Select(x => x.Name).ToArray();

    var characterCount = characters.Count();

    if (characterCount == 1)
    {
        <p><strong>Starring: </strong>@characters[0]</p>
    }

    else
    {
        <p><strong>Starring:</strong> @characters[0], @characters[1]</p>
    }
}

<hr/>

@Html.ActionLink("Back to All Comics", "Index");



